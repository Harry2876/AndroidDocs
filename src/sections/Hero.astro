---
import Particle from '../components/Particles.astro'
import HeroGradientBg from '../components/HeroBackground.astro'

interface Props {
  title?: string
  description?: string
  align?: 'center' | 'left'
}

const { title, description, align = 'left' } = Astro.props
---

<section class="relative h-svh w-full text-neutral-700 overflow-hidden">
  <div
    class="relative flex items-center w-full h-full bg-gradient-to-b from-primary/5 via-primary/0 via-70% to-secondary/5"
  >
    <!-- Background Components -->
    <HeroGradientBg />
    <Particle />

    <!-- Content Section -->
    <div
      class:list={[
        'relative container flex flex-col gap-16',
        align === 'center' ? 'text-center' : '',
      ]}
    >
      <div class="flex flex-col items-center gap-8 w-full">
        <h1
          class="text-foreground text-center py-6 text-5xl font-medium tracking-normal sm:text-4xl md:text-6xl leading-[1.15] w-full font-heading"
        >
          Elevate Development with
          <span
            class="text-transparent animate-color bg-gradient-to-r from-[#8b5cf6] to-[#d946ef] bg-clip-text inline-block"
          >
            Crafted Libraries
          </span>
        </h1>

        {description && (
          <p class="text-neutral-500 text-center lg:text-lg">{description}</p>
        )}
      </div>

      <!-- Slot for Additional Content -->
      <div class="flex flex-col gap-4">
        <slot />
      </div>
    </div>
  </div>
</section>