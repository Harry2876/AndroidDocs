---
// import HeroGradient from '../components/HeroGradient.astro'
import Particle from '../components/Particles.astro'
import HeroGradientBg from '../components/HeroBackground.astro'

interface Props {
  title?: string
  description?: string
  align?: 'center' | 'left'
}

const { title, description, align = 'left' } = Astro.props
---

<section class="relative h-svh w-full text-neutral-700 overflow-clip">
  <div
    class="relative flex items-center w-full h-full bg-gradient-to-b from-primary/5 via-primary/0 via-70% to-secondary/5 overflow-clip"
  >
    <HeroGradientBg />
    <!-- <HeroGradient /> -->

    <Particle />
    <div
      class:list={[
        'relative container w-full flex flex-col gap-16',
        align === 'center' ? 'text-center' : '',
      ]}
    >
      <div class="flex flex-col items-center gap-8 w-full">
        <!-- {
          title && (
            <h1
              class:list={[
                'text-4xl sm:text-[7.5vw] md:text-[7vw] lg:text-[6vw] xl:text-[5vw] leading-none [&>strong]:font-medium',
                align === 'center' ? 'mx-auto' : '',
              ]}
              set:html={title}
            />
          )
        }
         -->
        <div
          class="text-foreground text-center py-6 text-5xl font-medium tracking-normal text-balance sm:text-4xl md:text-6xl !leading-[1.15] w-full font-heading"
        >
          Elevate Development with <span
            class="text-transparent animate-color bg-gradient-to-r from-[#8b5cf6] to-[#d946ef] bg-clip-text inline-bloc"
            >Crafted Libraries</span
          >
        </div>

        {
          description && (
            <p
              class:list={['text-neutral-500 text-center lg:text-lg']}
              set:html={description}
            />
          )
        }
      </div>

      <div class="flex flex-col gap-4">
        <slot />
      </div>
    </div>
  </div>
</section>
