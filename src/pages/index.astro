import Layout from '../layouts/Layout.astro'
import Sidebar from '../layouts/Sidebar.astro'
import CodeSnippet from '../components/CodeSnippet.astro'
---
<Layout title="Free Astro Components">
  <Sidebar class="lg:hidden" />
  <div class="absolute inset-0 -z-10 h-full w-full" style="background:var(--theme-gradient)">
    <div class="absolute inset-0 -z-10 h-full w-full"
    style="background: var(--grid-gradient);background-size: 10px 10px;auto">
  <Header />
  <main>
    <Hero
      align="center"
      description="You can use these components to build your Astro projects faster."
    >
    align="center"
    title="Elevate Development with <a href='#'>Crafted Libraries</a>"
    description="for Seamless Android Development">
      <div>
        <Button
          href="/guide/installation"
          label="Get started"
          class="bg-[#63e] animate-color"
        />
      </div>
      <div>
        <!-- <Code code="npm install free-astro-components" /> -->
        <CodeSnippet />
      </div>

      <!-- <Intro />
    <CTA
      align="center"
