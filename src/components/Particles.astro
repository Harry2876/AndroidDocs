<script>
  const dots = document.querySelectorAll('.dot')

  dots.forEach((dot) => {
    dot.style.left = `${Math.random() * 100}vw`
    dot.style.top = `${Math.random() * 100}vh`
    dot.style.setProperty('--duration', `${15 + Math.random() * 10}s`)
  })
</script>
