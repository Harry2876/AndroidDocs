<div class="animated-dots">
  {
    Array.from({ length: 100 }).map((_, i) => (
      <div
        class="dot"
        style={`--delay: ${Math.random() * 4}s; --size: ${Math.random() * 4 + 2}px`}
      />
    ))
  }
</div>

<style>
  .animated-dots {
    position: fixed;
    inset: 0;
    z-index: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .dot {
    position: absolute;
    width: var(--size);
    height: var(--size);
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    animation: float var(--duration, 20s) ease-in-out infinite;
    animation-delay: var(--delay);
  }

  @keyframes float {
    0% {
      transform: translate(0, 0);
    }
    33% {
      transform: translate(
        calc(100px + var(--delay) * 10px),
        calc(50px + var(--delay) * 5px)
      );
    }
    66% {
      transform: translate(
        calc(-50px - var(--delay) * 5px),
        calc(100px + var(--delay) * 10px)
      );
    }
    100% {
      transform: translate(0, 0);
    }
  }
</style>

